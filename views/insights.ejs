<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Chau Tra Mi Vo">
        <meta name="description" content="You Will Be Amazed!">
        <title>Go Vietnam | Insights</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

        <link rel="stylesheet" href="govn-insights.css">
        <script src="insights.js"></script>

    </head>
    
    <body>
        <header>
            <h6>You Will Be Amazed!</h6>
        </header>

        <!--Navbar-->
        <nav class="navbar navbar-expand-lg bg-white text-black sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center text-black active me-4" aria-current="page" href="/home">
                    <img src="govnlogo-yellow.png" alt="Go Vietnam" width="50" height="30" class="d-inline-block align-text-top me-2">
                    <strong>Go Vietnam</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-black me-2" href="/home">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-black me-2" href="/explore" id="exploreDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Explore Vietnam
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="exploreDropdown">
                                <li><a class="dropdown-item" href="/explore/north">North</a></li>
                                <li><a class="dropdown-item" href="/explore/central">Central</a></li>
                                <li><a class="dropdown-item" href="/explore/south">South</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black me-2" href="/insights">Insights</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-black me-2" href="/contact" id="contactDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Contact Us
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="contactDropdown">
                                <li><a class="dropdown-item" href="#getintouch">Get In Touch</a></li>
                                <li><a class="dropdown-item" href="#request">Request a Custom Itinerary</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black me-2" href="/feedback">Feedback</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main>

            <!--Banner-->
            <div class="banner">
                <div class="container">
                    <div class="banner-text">
                        <h1>Stories, Sights, and Flavors<br>You Wonâ€™t Want to Miss</h1>
                    </div>
                </div>
            </div>

            <!--Eating-->
            <div class="topic-section">
                <div class="container">
                    <div class="col-12">
                        <h2>#Eating</h2>
                    </div>
                    <div class="row g-4">
                        <% data.eating.forEach(function(item) { %>
                            <div class="col-md-4">
                                <div class="card custom-card">
                                    <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
                                    <div class="card-body p-4">
                                        <h5 class="card-title mb-3">
                                            <strong><%= item.title %></strong>
                                        </h5>
                                        <p class="card-text mb-4">
                                            <%= item.description %>
                                        </p>
                                        <a href="<%= item.link %>" class="btn custom-btn mt-auto">Read Now!</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!--Drinking-->
            <div class="topic-section">
                <div class="container">
                    <div class="col-12">
                        <h2>#Drinking</h2>
                    </div>
                    <div class="row g-4">
                        <% data.drinking.forEach(function(item) { %>
                            <div class="col-md-4">
                                <div class="card custom-card">
                                    <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
                                    <div class="card-body p-4">
                                        <h5 class="card-title mb-3">
                                            <strong><%= item.title %></strong>
                                        </h5>
                                        <p class="card-text mb-4">
                                            <%= item.description %>
                                        </p>
                                        <a href="<%= item.link %>" class="btn custom-btn mt-auto">Read Now!</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!--Landscapes-->
            <div class="topic-section">
                <div class="container">
                    <div class="col-12">
                        <h2>#Landscape</h2>
                    </div>
                    <div class="row g-4">
                        <% data.landscapes.forEach(function(item) { %>
                            <div class="col-md-4">
                                <div class="card custom-card">
                                    <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
                                    <div class="card-body p-4">
                                        <h5 class="card-title mb-3">
                                            <strong><%= item.title %></strong>
                                        </h5>
                                        <p class="card-text mb-4">
                                            <%= item.description %>
                                        </p>
                                        <a href="<%= item.link %>" class="btn custom-btn mt-auto">Read Now!</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!--Travel Tips-->
            <div class="topic-section">
                <div class="container">
                    <div class="col-12">
                        <h2>#Tips</h2>
                    </div>
                    <div class="row g-4">
                        <% data.tips.forEach(function(item) { %>
                            <div class="col-md-4">
                                <div class="card custom-card">
                                    <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
                                    <div class="card-body p-4">
                                        <h5 class="card-title mb-3">
                                            <strong><%= item.title %></strong>
                                        </h5>
                                        <p class="card-text mb-4">
                                            <%= item.description %>
                                        </p>
                                        <a href="<%= item.link %>" class="btn custom-btn mt-auto">Read Now!</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!--Collapse of other topics-->
            <div class="topic-section">
                <div class="container">
                    <div class="collapse" id="collapsetopics">
                        <div class="col-12">
                            <h2>#Festivals-Events</h2>
                        </div>
                        <div class="row">
                            <% data.festivals.forEach(function(item) { %>
                                <div class="col-md-4">
                                    <div class="card custom-card">
                                        <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
                                        <div class="card-body p-4">
                                            <h5 class="card-title mb-3">
                                                <strong><%= item.title %></strong>
                                            </h5>
                                            <p class="card-text mb-4">
                                                <%= item.description %>
                                            </p>
                                            <a href="<%= item.link %>" class="btn custom-btn mt-auto">Read Now!</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>    
                    </div>

                    <div class="col-12 text-center mt-5">
                        <a class="text-link" id="toggleLink" onclick="seeMore()" data-bs-toggle="collapse" href="#collapsetopics" role="button" aria-expanded="false" aria-controls="collapsetopics">
                            See More...
                        </a>
                    </div>
                </div>
            </div>

        </main>

        <footer>
            <div class="copy-custom">
                <div class="container copy-custom text-white">
                    <div class="row pt-3">
                        <div class="col-12 text-center">
                            <p><em>Copyright &copy; 2024 Go Vietnam. All Rights Reserved.</em></p>
                        </div>
                    </div>
                </div>
            </div>

        </footer>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var dropdowns = document.querySelectorAll('.nav-item.dropdown');
        
                dropdowns.forEach(function (dropdown) {
                    dropdown.addEventListener('click', function (event) {
                        if (window.innerWidth >= 992) {
                            window.location.href = this.querySelector('.nav-link').getAttribute('href');
                        }
                    });
                });
            });
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    </body>
</html>